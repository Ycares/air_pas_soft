          <% else %>
            <%= cl_image_tag("racphw8y1wvw9fv9s4lc.jpeg", width: 200, height: 200, crop: :fill) %>
          <% end %>

          <div class="card-body">
            <h3 class="card-title-h3"> <%= link_to order.weapon.name, weapon_path(order.weapon) %> </h3>
